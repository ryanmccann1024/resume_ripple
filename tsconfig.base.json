{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "paths": {
      "@core/*": ["packages/core-logic/src/*"],
      "@ui/*":   ["packages/ui-kit/src/*"]
    }
  }
}
