// tsconfig.eslint.json
// ðŸ§¹ TypeScript config used specifically by ESLint for type-aware linting.
// Includes source files from apps and packages to ensure all important code is analyzed.

{
  "extends": "./tsconfig.json",
  "include": [
    /* source code */
    "apps/*/src/**/*",
    "packages/*/src/**/*",
    "packages/ui-kit/.storybook/**/*",
    "tsup.config.ts",

    /* tests */
    "apps/*/test/**/*",
    "packages/*/test/**/*",

    /* root-level configs (Vitest, ESLint, etc.) */
    "*.config.{js,ts,cjs,mjs}",
    "vitest.config.ts"
  ],
  "exclude": ["node_modules", "dist", "coverage"]
}
