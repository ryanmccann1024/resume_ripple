// tsconfig.json
// ðŸ§  Root TypeScript config for the entire monorepo.
// Extends base config and enables project references, paths, and aliases for apps/packages.

{
  // tsconfig.json â”€ satisfies ESLint, nothing else
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true, // <-- we *do* want d.ts
    "declarationMap": true,
    "outDir": "dist",
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true
  },

  "include": ["apps/*/src", "packages/*/src", "apps/*/test", "packages/*/test"],
  "exclude": ["**/dist", "node_modules"]
}
